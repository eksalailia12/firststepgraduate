<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#6FCF97"
    android:padding="30dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profil"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_margin="50dp"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txt_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Silvia Andiri, S.Pd., M.SI."
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/txt_title"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/txt_nim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="198503302003121001"
        app:layout_constraintTop_toBottomOf="@id/txt_nama"
        app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/profile_image"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_notif_diagonal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toLeftOf="@id/txt_nama"
            app:layout_constraintTop_toBottomOf="@id/txt_title"/>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/profile_image"
        android:background="#111111"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Username"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/edt_username"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/username"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/edt_username"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/edt_password"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/password"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/hp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No. Hp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/edt_password"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/edt_hp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/hp"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/edt_hp"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/edt_email"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/email"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/kelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kelas"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/edt_email"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/edt_kelas"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/kelas"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Judul Skripsi"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/edt_kelas"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/edt_judul"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/judul"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/dospem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dosen Pembimbing"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/edt_judul"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/edt_dospem"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dospem"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/dospen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dosen Pendamping"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/edt_dospem"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/edt_dospen"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dospen"
        app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/btn_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EFEC9C"
            android:padding="5dp"
            android:text="Update Data"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/edt_dospen"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.core.widget.NestedScrollView>